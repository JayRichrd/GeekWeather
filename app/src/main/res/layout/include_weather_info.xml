<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/margin_left_weather_info_root_layout"
              android:layout_marginTop="@dimen/margin_top_weather_info"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_number1"
            style="@style/weather_info_degree"
            android:src="@drawable/number_1"/>

        <ImageView
            android:id="@+id/iv_number2"
            style="@style/weather_info_degree"
            android:src="@drawable/number_7"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                style="@style/weather_info_degree"
                android:layout_alignParentTop="true"
                android:src="@drawable/degree"/>

            <TextView
                android:id="@+id/tv_temperature"
                style="@style/weather_info"
                android:layout_alignParentBottom="true"
                android:text="晴"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_weather_info"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_wind"
            style="@style/weather_info"
            android:layout_marginRight="@dimen/margin_right_weather_info"
            android:drawableLeft="@drawable/wind"
            android:gravity="center_vertical"
            android:text="北风1级"/>

        <TextView
            android:id="@+id/tv_humidity"
            style="@style/weather_info"
            android:layout_marginRight="@dimen/margin_right_weather_info"
            android:drawableLeft="@drawable/humidity"
            android:gravity="center_vertical"
            android:text="79%"/>

        <TextView
            android:id="@+id/tv_aqi"
            style="@style/weather_info"
            android:drawableLeft="@drawable/leaf_liang"
            android:drawableRight="@drawable/right"
            android:gravity="center_vertical"
            android:text="59良"/>
    </LinearLayout>

</LinearLayout>