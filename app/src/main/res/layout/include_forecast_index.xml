<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/margin_left_forecasts_index"
              android:layout_marginTop="@dimen/margin_top_forecasts"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_forecasts_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多日天气预报"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_size_indexes"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_left_forecasts"
            android:layout_toRightOf="@id/tv_forecasts_index"
            android:background="@android:color/white"/>

    </RelativeLayout>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/weather_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_forecasts"/>

</LinearLayout>