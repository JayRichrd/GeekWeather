<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/both_w_and_h_match"
    android:background="@android:color/holo_purple"
    android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <LinearLayout
        style="@style/w_match_and_h_wrap"
        android:layout_margin="10dp"
        android:background="@drawable/bg_search_city_edit_text"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_search_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="2dp"
            android:hint="@string/hint_search"
            android:maxLines="1"
            android:textCursorDrawable="@drawable/cursor_search_city"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_clear"
            style="@style/both_w_and_h_wrap"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_clear"
            android:visibility="invisible"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/ll_hot_city"
            style="@style/both_w_and_h_match"
            android:orientation="vertical">

            <TextView
                style="@style/both_w_and_h_wrap"
                android:layout_marginLeft="19dp"
                android:text="@string/hot_city_label"
                android:textSize="18sp"/>

            <View
                style="@style/divider_line_horizontal"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="5dp"
                android:background="#33ffffff"/>

            <GridView
                android:id="@+id/gv_hot_city"
                style="@style/both_w_and_h_match"
                android:numColumns="4"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_no_matched_city"
            style="@style/both_w_and_h_wrap"
            android:layout_marginLeft="19dp"
            android:text="@string/no_matched_city"
            android:textSize="16sp"
            android:visibility="gone"/>

        <ListView
            android:id="@+id/lv_search_city"
            style="@style/both_w_and_h_match"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:dividerHeight="0.5dp"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>
