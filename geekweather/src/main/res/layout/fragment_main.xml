<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dl_main"
    style="@style/common_both_w_and_h_match"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">
    <!-- 主布局 -->
    <LinearLayout
        android:id="@+id/ll_root_content"
        style="@style/common_both_w_and_h_match"
        android:background="@drawable/bg_main"
        android:orientation="vertical">

        <!--toolbar标题栏-->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/common_w_match_and_h_wrap"
            android:minHeight="?attr/actionBarSize">
            <!--城市标题-->
            <TextView
                android:id="@+id/tv_city"
                style="@style/common_both_w_and_h_wrap"
                android:layout_gravity="center"
                android:text="@string/common_default_txt"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_xx_large"
                android:textStyle="bold"/>
            <!--添加城市图标-->
            <!--android:layout_gravity="right"-->
            <ImageView
                android:id="@+id/iv_add_city"
                style="@style/common_both_w_and_h_wrap"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/margin_12dp"
                android:layout_marginRight="@dimen/margin_12dp"
                android:contentDescription="@string/main_fragment_iv_add_city_content_desc"
                android:src="@drawable/ic_home"/>
        </android.support.v7.widget.Toolbar>

        <!--下拉刷新ScrollView-->
        <!--注意ScrollView的内部只允许存在一个子布局-->
        <com.handmark.pulltorefresh.library.PullToRefreshScrollView
            xmlns:ptr="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ptrsv_root"
            style="@style/common_both_w_and_h_match"
            android:overScrollMode="never"
            android:scrollbars="vertical"
            ptr:ptrAnimationStyle="rotate"
            ptr:ptrHeaderSubTextColor="@color/white_trans60"
            ptr:ptrHeaderTextColor="@color/white_trans90">

            <LinearLayout
                style="@style/common_both_w_and_h_match"
                android:orientation="vertical">
                <!--顶部的时间-->
                <include layout="@layout/include_main_fragment_date"/>
                <!--中间的天气-->
                <include layout="@layout/include_main_fragment_weather_info"/>
                <!--多日天气预报-->
                <include layout="@layout/include_main_fragment_forecast"/>
                <!--生活指数-->
                <include layout="@layout/include_main_fragment_life_index"/>
            </LinearLayout>

        </com.handmark.pulltorefresh.library.PullToRefreshScrollView>

    </LinearLayout>

    <!-- 抽屉 -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="@dimen/width_250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/include_main_fragment_nav_head"
        app:menu="@menu/navigation_menu"/>

</android.support.v4.widget.DrawerLayout>
